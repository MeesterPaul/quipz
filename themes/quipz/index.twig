                </div>
            {% endif %}
-->
            <div id="logo" aria-hidden="true">
                <a href="{{ "index"|link }}">
                    <img src="{{ assets_url }}/logos/quipz-logo-4-colours-full.svg" alt="" class="svg-logo"/>
                </a>
            </div>
            <div id="title"{{ pages["_meta"].meta.tagline ? ' class="tagline"' }}>
                <a href="{{ "index"|link }}">
                    <h1>{{ site_title }}</h1>
                    {{ pages["_meta"].meta.tagline|markdown }}
                </a>
            </div>
